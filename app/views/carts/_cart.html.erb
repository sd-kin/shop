

<table class = "table table-condenced table-hover ">

<%= render(cart.line_items) %>

 <tr class="total_line">
 	
 	<td colspan="2">Total</td>
 	<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
 </tr>
 </table>

 <div class = "row">
 <biv class = "col-md-6">

<div class="nav btn-group" role="group" aria-label="cart-butt">

 <% unless session[:order_set] %>
<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-block", remote: true %>
<%= button_to "Checkout ", new_order_path, method: :get,class: "btn btn-success", disabled: @current_page %>
 <% else %>
	 <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
	 <%= button_to 'Back to store', store_url, method: :get %>
 <% end %>
 </div>
 </biv>
 </div>



 
