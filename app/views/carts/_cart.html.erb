

<table class = "table table-condenced table-hover ">

<%= render(cart.line_items) %>

 <tr class="total_line">
 	
 	<td colspan="2">Total</td>
 	<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
 </tr>




 <% unless session[:order_set] %>
<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
<%= button_to "Checkout ", new_order_path, method: :get, disabled: @current_page %>
 <% else %>
	 <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
	 <%= button_to 'Back to store', store_url, method: :get %>
 <% end %>


 </table>
 
